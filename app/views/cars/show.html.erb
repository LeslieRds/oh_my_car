<div class="container">
  <h1><%= @car.brand %></h1><br><br>
  Prix : <%= @car.price %> Simflouz<br><br>
  Où est-elle ? : <%= @car.address %><br><br>
  <div class="form_wrapper">
    <h2>"La réserver maintenant!"</h2>
    <%= simple_form_for [@car.id, @booking] do |f| %>
      <%= f.input :start_date, as: :string, required:false, input_html: { id: "range_start" } %>
      <%= f.input :end_date, as: :string, required:false, input_html: { id: "range_end" } %>
      <%= f.button :submit, "Réserver", class: "btn btn-primary" %>
    <% end %>
  </div>
  <%= link_to "Retour", cars_path(@cars) %><br><br>
  <div id="booking-form-div"
    data-bookings="<%= @bookings_dates.to_json %>">
  </div>
</div>
